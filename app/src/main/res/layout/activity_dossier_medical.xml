<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DossierMedical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgLogo"
            android:src="@drawable/medical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="@dimen/right"
            android:layout_width="150dp"
            android:layout_height="90dp"/>
        <TextView
            android:id="@+id/txtTitle"
            android:layout_below="@+id/imgLogo"
            android:layout_marginTop="@dimen/top"
            android:gravity="center"
            android:text="Creation de dossier medical"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txtLoginD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_marginLeft="@dimen/left"
            android:layout_marginTop="@dimen/top"
            android:layout_marginRight="@dimen/right"
            android:hint="identifiant" />

        <EditText
            android:id="@+id/txtDateD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLoginD"
            android:layout_marginLeft="@dimen/left"
            android:layout_marginTop="@dimen/top"
            android:layout_marginRight="@dimen/right"
            android:hint="Date de derniere consultation"
            android:inputType="datetime" />

        <EditText
            android:id="@+id/txtDiagnosticD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDateD"
            android:layout_marginLeft="@dimen/left"
            android:layout_marginTop="@dimen/top"
            android:layout_marginRight="@dimen/right"
            android:hint="Diagnostic" />

        <EditText
            android:id="@+id/txtMedocD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDiagnosticD"
            android:layout_marginLeft="@dimen/left"
            android:layout_marginTop="@dimen/top"
            android:layout_marginRight="@dimen/right"
            android:hint="Medicaments" />


        <EditText
            android:id="@+id/txtServiceD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMedocD"
            android:layout_marginLeft="@dimen/left"
            android:layout_marginTop="@dimen/top"
            android:layout_marginRight="@dimen/right"
            android:hint="Service" />

        <Button
            android:id="@+id/btnSaveD"
            android:layout_below="@+id/txtServiceD"
            android:layout_marginLeft="@dimen/left"
            android:layout_marginRight="@dimen/right"
            android:layout_marginTop="@dimen/top"
            android:backgroundTint="@color/green"
            android:text="Enregistrer"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</ScrollView>